%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%  00

evm/stop:
  code PC N_00 *
  pc PC *
  !inc PC PC'
  -o {
    code PC N_00 *
    stop
  }.

evm/add:
  code PC N_01 *
  pc PC *
  !inc PC PC' *
  sh (s (s SH)) *
  stack (s SH) A *
  stack SH  B *
  !plus A B C
  -o {
    code PC N_01 *
    pc PC' *
    sh (s SH) *
    stack SH C
  }.

evm/mul:
  code PC N_02 *
  pc PC *
  !inc PC PC' *
  sh (s (s SH)) *
  stack (s SH) A *
  stack SH  B *
  trim A A' *
  trim B B' *
  !mul A B C *
  to256 C C'
  -o {
    code PC N_02 *
    pc PC' *
    sh (s SH) *
    stack SH C'
  }.

evm/sub:
  code PC N_03 *
  pc PC *
  !inc PC PC' *
  sh (s (s SH)) *
  stack (s SH) A *
  stack SH  B *
  !plus C B A
  -o {
    code PC N_03 *
    pc PC' *
    sh (s SH) *
    stack SH C
  }.

evm/exp:
  code PC N_0a *
  pc PC *
  !inc PC PC' *
  sh (s (s SH)) *
  stack (s SH) Base *
  stack SH  Exponent *
  !trim Base Base' *
  !trim Exponent Exponent' *
  !exp Base' Exponent' Result *
  !to256 Result Result'
  -o {
    debug Base' *
    debug Exponent' *
    code PC N_0a *
    pc PC' *
    sh (s SH) *
    stack SH Result'
  }.


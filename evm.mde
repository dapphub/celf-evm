evm/eq:
  code PC N_14 *
  pc PC *
  !inc PC PC' *
  gas GAS *
  !plus (o(i e)) GAS GAS' * %10 = 2 *
  sh (s (s SH)) *
  stack (s SH) X *
  stack SH Y
  -o {
    pc PC' *
    gas GAS' *
    code PC N_14 *
    sh (s SH) *
    ((!neq X Y -o {
      stack SH N_00
    }) &
    (!eq X Y -o {
      stack SH N_01
    }))
  }.

evm/iszero:
  code PC N_15 *
  pc PC *
  !inc PC PC' *
  gas GAS *
  !inc GAS GAS' *
  sh (s SH) *
  stack SH V
  -o {
    code PC N_15 *
    pc PC' *
    gas GAS' *
    sh (s SH) *
    ((!eq V N_00 -o {stack SH N_01}) &
    (!neq V N_00 -o {stack SH N_00}))
  }.

evm/lt:
